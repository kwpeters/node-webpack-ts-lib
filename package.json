{
  "name": "node-webpack-ts-lib",
  "version": "1.0.0",
  "description": "A sample library written in TypeScript and bundled using Webpack.",
  "main": "dist/production/index.js",
  "typings": "dist/production/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-dev": "node ./build.js dev",
    "build-prod": "node ./build.js production",
    "build": "npm run build-dev && npm run build-prod",
    "dev": "WEBPACK_ENV=development webpack --config webpack.config.js --progress --colors --watch",
    "postinstall": "postinstall-build dist --script build-prod"
  },
  "author": "Kevin Peters <kwpeters@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^7.0.13",
    "awesome-typescript-loader": "^3.1.2",
    "source-map-loader": "^0.2.1",
    "typescript": "^2.2.2",
    "webpack": "^2.4.1"
  },
  "dependencies": {
    "postinstall-build": "^3.0.1"
  }
}
